<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Bine ați venit în comunitatea de motocicliști din România!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/findRoutesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Găsește rute"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/findGroupsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Găsește grupuri"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/eventsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evenimente"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/tipsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sfaturi și trucuri"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
